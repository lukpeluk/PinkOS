include Makefile.inc

KERNEL=kernel.bin
SOURCES=$(wildcard *.c)
SOURCES_ASM=$(wildcard asm/*.asm)
DRIVER_SOURCES=$(wildcard drivers/*.c)
EVENT_HANDLING_SOURCES=$(wildcard eventHandling/*.c)
INTERRUPT_SOURCES=$(wildcard interrupts/*.c)
EXCEPTION_SOURCES=$(wildcard exceptions/*.c)
SYSCALLS_SOURCES=$(wildcard syscalls/*.c)

OBJECTS=$(SOURCES:.c=.o)
OBJECTS_ASM=$(SOURCES_ASM:.asm=.o)
DRIVER_OBJECTS=$(DRIVER_SOURCES:.c=.o)
EVENT_HANDLING_OBJECTS=$(EVENT_HANDLING_SOURCES:.c=.o)
INTERRUPT_OBJECTS=$(INTERRUPT_SOURCES:.c=.o)
EXCEPTION_OBJECTS=$(EXCEPTION_SOURCES:.c=.o)
SYSCALL_OBJECTS=$(SYSCALLS_SOURCES:.c=.o)

LOADERSRC=loader.asm

LOADEROBJECT=$(LOADERSRC:.asm=.o)
STATICLIBS=

all: $(KERNEL)

$(KERNEL): $(LOADEROBJECT) $(OBJECTS) $(STATICLIBS) $(OBJECTS_ASM) $(DRIVER_OBJECTS) $(EVENT_HANDLING_OBJECTS) $(INTERRUPT_OBJECTS) $(EXCEPTION_OBJECTS) $(SYSCALL_OBJECTS)
	$(LD) $(LDFLAGS) -T kernel.ld -o $(KERNEL) $(LOADEROBJECT) $(OBJECTS) $(STATICLIBS) $(OBJECTS_ASM) $(DRIVER_OBJECTS) $(EVENT_HANDLING_OBJECTS) $(INTERRUPT_OBJECTS) $(EXCEPTION_OBJECTS) $(SYSCALL_OBJECTS)

%.o: %.c
	$(GCC) $(GCCFLAGS) -I./include -c $< -o $@

%.o : %.asm
	$(ASM) $(ASMFLAGS) $< -o $@

$(LOADEROBJECT):
	$(ASM) $(ASMFLAGS) $(LOADERSRC) -o $(LOADEROBJECT)

clean:
	rm -rf asm/*.o *.o *.bin

.PHONY: all clean
